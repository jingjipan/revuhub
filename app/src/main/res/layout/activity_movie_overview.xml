<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation_layer.MovieOverviewActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="Default" />

        <ImageView
            android:id="@+id/movieImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/movieImageDescription" />

        <TextView
            android:id="@+id/movieCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:text="Default" />

        <TextView
            android:id="@+id/movieSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:text="Default" />

        <TextView
            android:id="@+id/ReviewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="@string/ReviewText" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >
        </ListView>

        <EditText
            android:id="@+id/movieReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Review"
            />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:text="@string/Submit"
            android:textSize="20sp" />
    </LinearLayout>



